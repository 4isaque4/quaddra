{
  "name": "quaddra",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "dev": "concurrently -c \"bgBlue.bold,bgMagenta.bold\" -n web,api \"npm -w apps/web run dev\" \"npm -w apps/api run dev\"",
    "build": "npm run build --workspaces",
    "extract-bpmn": "tsx tools/extract-descriptions.ts",
    "extract-bpmn:watch": "tsx watch tools/extract-descriptions.ts"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}